<!--pages/addPovertyInfo/addPovertyInfo.wxml-->
<view class='container'>
  <form bindsubmit="formSubmit">
    <!--top部分begin-->
    <view class='top'>
      <!--top背景图片begin-->
      <view class='top-bg'>
        <image src='/images/top-border.png'></image>
      </view>
      <!--top背景图片end-->
      <input name='title' type='text' placeholder='添加大字标题' placeholder-style='color:rgb(200,200,200);font-size:4vw'></input>
      <textarea name='content' type='text' maxlength='1000' placeholder="请描述一下家庭情况，经济状况，所需物资与金额" placeholder-style='color:rgb(200,200,200);font-size:4vw' />
      <view wx:key="imgbox" wx:for="{{imgbox}}" class="imgBox">
        <image class='photo' src="{{item}}"></image>
        <image class="image-delete" src='/images/delete.png' data-deindex='{{index}}' bindtap='imgDelete'></image>   <!--右上角删除照片-->
      </view>
      <view class='add-pic' bindtap='chooseImage' wx:if="{{imgbox.length<3}}"> <!--最多3张图片-->
        <image class='img' src='/images/photo-border.png'></image>    <!--+号图片-->
      </view><!---->
    </view>
    <!--top部分end-->

    <!--middle部分begin-->
    <view class='middle'>
      <!--middle背景图片begin-->
      <image src='/images/middle-border.png' class="middle-bg"></image>
      <!--middle背景图片end-->

      <input name='userName' class='inputName' type='text' placeholder='姓名' placeholder-class='placeholder-class'></input>
      <input name='tel' class='inputTel' type='text' placeholder='电话' placeholder-class='placeholder-class'></input>
      <input name='address' class='inputAddress' type='text' placeholder='地址' placeholder-class='placeholder-class'></input>
      <view class='user-type' bindtap='chooseUserType'>{{userClass}}</view>
      <input name='money' class='inputMoney' type='number' value=''></input>

    </view>
    <!--middle部分end-->

    <!--bottom部分begin-->
    <view class='bottom'>
      <view class='bottom-bg'>
        <image src='/images/bottom-border.png'></image>
      </view>
      <button formType="submit">确认发布</button>
    </view>
    <!--bottom部分end-->
  </form>
</view>