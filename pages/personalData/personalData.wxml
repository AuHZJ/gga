<!--pages/personalData/personalData.wxml-->

<!--背景begin-->
<image src="../../images/backgroundImage.jpg" class="backgroundImage"></image>
<!--背景end-->

<view class="headImage">
  <text>头像</text>
  <!-- <image src="{{headImagePaths}}" bindtap='changeHeadImage'></image> -->
  <open-data type="userAvatarUrl" class="top-left-headImage"></open-data>
</view>

<view class="IDPanel">
  <text>ID</text>
  <text class="ID">{{sessionid}}</text>
</view>

<view class="namePanel">
  <text>昵称</text>
  <open-data type="userNickName" lang="zh_CN" class="name"></open-data>
</view>

<view class="sexPanel">
  <text>性别</text>
  <open-data type="userGender" lang="zh_CN" class="sex"></open-data>
</view>

<view class="typePanel">
  <text>用户类型</text>
  <text class="type">{{userType}}</text>
</view>

<view class="addressPanel">
  <text>地区</text>
  <view class="address">
    <open-data type="userCountry" lang="zh_CN"></open-data>
    <open-data type="userProvince" lang="zh_CN"></open-data>
    <open-data type="userCity" lang="zh_CN"></open-data>
  </view>
</view>

<view class="personalitySignaturePanel" hidden='true'>
  <text>个性签名</text>
  <text class="personalitySignature">hello world!</text>
</view>