/* pages/personalData/personalData.wxss */
.backgroundImage{
  width: 100%;
  height: 110%;
  z-index: -1;
  position: fixed;
}
.headImage{
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 95px;
  line-height: 95px;
  font-size: 17px;
  color: rgba(0,0,0,0.8);
  padding-left: 20px;
  border-bottom: 1px solid rgba(0,0,0,0.1);
}
.headImage .top-left-headImage{
  width: 85px;
  height: 85px;
  overflow: hidden;
  border-radius: 42.5px;
  position: absolute;
  right: 20px;
  top: 5px;
}
.IDPanel,.namePanel,.sexPanel,.typePanel,.addressPanel,.personalitySignaturePanel{
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 55px;
  line-height: 55px;
  font-size: 17px;
  color: rgba(0,0,0,0.8);
  padding-left: 20px;
  border-bottom: 1px solid rgba(0,0,0,0.1);
}
.IDPanel .ID,
.namePanel .name,
.sexPanel .sex,
.typePanel .type,
.addressPanel .address,
.personalitySignaturePanel .personalitySignature{
  position: absolute;
  display: inline-block;
  right: 20px;
  color: rgba(0,0,0,0.5);
}