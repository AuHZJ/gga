.backgroundImage{
  width: 100%;
  height: 100%;
  z-index: -1;
  position: fixed;
}
.top{
  box-sizing: border-box;
  background-color: rgba(235,58,58,0.5);
  width: 100%;
  height: 120px;
  text-align: center;
  position: relative;
  padding-top: 20px;
}
.top-left{
  font-size: 17px;
  position: absolute;
  top: 5px;
  left: 4%;
  color: rgba(0,0,0,0.5);
}
.top-number{
  color: white;
  font-size: 40px;
  position: absolute;
  left: 35%;
  bottom: 35%;
}
.top-right{
  border: 1px solid rgba(255,255,255,0.5);
  border-radius: 12.5px;
  width: auto;
  height: 21px;
  line-height: 21px;
  position: absolute;
  right: 4%;
  bottom: 43%;
  font-size: 20px;
  color: white;
}
icon{
  position: absolute;
  left: 30px;
  top: 15%;
}
input{
  text-align: left;
  box-sizing: border-box;
  background-color: rgb(245,205,205);
  width: 92%;
  height: 27px;
  border-radius: 12.5px;
  margin: auto;
  color: white;
  padding-left: 40px;
  padding-right: 40px;
}
.panel{
  position: relative;
  margin: auto;
  width: 92%;
  height: 165px;
  margin-bottom: 10px;
  background: rgba(255,255,255,0.4);
}
.panel-headImage{
  vertical-align: middle;
  display: inline-block;
  margin-left: 10px;
}
.panel-headImage image{
  width: 32px;
  height: 32px;
}
.panel-info{
  vertical-align: middle;
  display: inline-block;
  width: 200px;
}
text{
  font-size: 10px;
  display: block;
}
.panel-info-type{
  color: rgba(225,108,64,1);
}
.panel-info-address{
  color: rgba(0,0,0,0.5);
}
.realName{
  display: inline-block;
  position: absolute;
  right: 10px;
  top: 10px;
  width: 40px;
  height: 17px;
  line-height: 17px;
  text-align: center;
  background: rgba(0,112,223,1);
  border-radius: 10px;
  font-size: 10px;
  color: white;
}
.img{
  position: relative;
  text-align: center;
  width: 94%;
  height: 120px;
  margin: auto;
}
.img image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  z-index: 2;
}
.img .progress{
  position: absolute;
  right: 0;
  z-index: 3;
  height: 100%;
  background: rgba(255,255,255,0.3);
}
.img-title{
  z-index: 4;
  position: relative;
  top: 10px;
  color: white;
  font-size: 20px;
}
.img-totalAmount,.img-surplus{
  z-index: 4;
  position: absolute;
  bottom: 10px;
  color: white;
  font-size: 10px;
}
.img-totalAmount{
  left: 10px;
}
.img-surplus{
  right: 10px;
}